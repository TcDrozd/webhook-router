# Router Service Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Shared secret for edgeâ†’router authentication
# Must match the ROUTER_INGRESS_KEY in the edge service .env file
# Generate a secure random key with: openssl rand -hex 32
ROUTER_INGRESS_KEY=your_secure_random_key_here

# Optional: Authentication tokens for internal services
# These are referenced in routes.yml via the 'auth_env' field
# Only set the ones you actually use in your routes configuration

# Wiki Manager service token
DEST_WIKIMGR_SECRET=your_wikimgr_secret_token

# Slack ingest service token
SLACK_INGEST_TOKEN=your_slack_ingest_token

# JPL service token
JPL_TOKEN=your_jpl_token

# Example tokens for additional services (uncomment and modify as needed)
# GITHUB_SERVICE_TOKEN=your_github_service_token
# HOMEASSISTANT_TOKEN=your_homeassistant_token
# CUSTOM_SERVICE_TOKEN=your_custom_service_token
